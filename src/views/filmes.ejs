<!DOCTYPE html>
<html lang="pt-br" id="html" data-bs-theme=white>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/filmes.css">
    <title>My Movie List</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
    <body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-lg">

      <div class="container-fluid d-flex justify-content-around">
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <% try { %>
          <% usuario[0].Usuario %>
          <div class="collapse navbar-collapse">
            <a class="navbar-brand" href="/<%= usuario[0].Usuario %>" id="tituloNav" >My Movie List</a>
          </div>
          <a class="navbar-brand" href="/perfil/<%= usuario[0].Usuario %>"><%= usuario[0].Usuario %></a>
          <a class="navbar-brand" href="/filmes/<%= usuario[0].Usuario %>">Filmes</a>
          <a class="navbar-brand" href="/series/<%= usuario[0].Usuario %>">Series</a>
          <span class="material-symbols-outlined" onclick="mudarDarkMode()" id="icone">
            dark_mode
          </span>
        <% } catch (error) { %>
          <a class="navbar-brand" href="/">ERRO</a>
        <% } %>

      </div>

    </nav>

    <main>
      <div class="container p-3 d-flex justify-content-center align-items-center mb-5 shadow-lg" id="containerPesquisa">

        
        <form action="/buscaFilmes/<%= usuario[0].Usuario %>" method="post" id="formPesquisa">
          <input class="form-control p-2" name="buscaFilme" id="buscaFilme" placeholder="Pesquise um filme">
        </form>
        
        <img id="imgLupa" src="/img/Lupa.svg" width="30px" height="30px" alt="">

      </div>

      <div class="container border border-black p-3 d-flex justify-content-center align-items-center mb-5">
        
        <div class="container border border-black row p-3 d-flex justify-content-around align-items-center">

          <div class="d-flex justify-content-between">
            <h1>Filmes</h1>
            <% if(usuario[0].ISAdmin == 1) { %>
              <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addFilme">Adicionar Filme</button>
            <% } %>
          </div>

          <div class="overflow-y-auto d-flex flex-wrap" id="filmes">
            <% for(let i = 0; i < filmes.length; i++) { %>

              <div class="col text-center p-2">

                <a href="/filmeSelec/<%= filmes[i].IDFilme %>/<%= usuario[0].Usuario %>">
                  <img  class="capaFilme" src="/img/<%= filmes[i].Imagem %>" alt="Imagem não encontrada">
                </a>

                <p class=""><%= filmes[i].Titulo %></p>
              </div>

            <% } %>
          </div>

        </div>


      </div>

    </main>

    <!-- Modal -->

    <div class="modal" tabindex="-1" id="addFilme">
      
      <div class="modal-dialog modal-dialog-centered modal-lg">

        <div class="modal-content">

          <div class="modal-header">

            <h5 class="modal-title">Preencha os campos!</h5>

            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

          </div>

          <div class="modal-body">

            <form action="/filmes/<%= usuario[0].Usuario %>" enctype="multipart/form-data" method="post">

              <label class="form-label"  for="imagemInput">Imagem de capa do filme</label>

              <br>

              <input class="form-control" type="file" name="imagemInput" id="imagemInput" accept="image/" required>

              <br>

              <label class="form-label"  for="tituloInput">Titulo do Filme</label>

              <br>

              <input class="form-control" type="text"  name="tituloInput" name="tituloInput" placeholder="Digite o nome do filme" required>
  
              <br>

              <label class="form-label" for="sinopseInput" required>Sinopse do Filme</label>

              <br>

              <textarea class="form-control" name="sinopseInput" id="sinopseInput" rows="2"></textarea>

              <br>

              <label class="form-label" for="lancamentoInput">Data de Lançamento</label>

              <br>

              <input class="form-control" type="date" name="lancamentoInput" id="lancamentoInput">

              <br>

              <label class="form-label" for="idadeIndicativaInput">Idade Indicativa</label>

              <br>

              <select class="form-control" name="idadeIndicativaInput" id="idadeIndicativaInput">

                <option value="1">AL</option>
                <option value="2">A10</option>
                <option value="3">A12</option>
                <option value="4">A14</option>
                <option value="5">A16</option>
                <option value="6">A18</option>

              </select>

              <br>

              <select class="form-control multiselect" name="inputGenero" id="generoFilme" multiple>
                <% for(let i = 0; i < generos.length; i++) { %>
                  
                  <option value="<%= generos[i].IDGenero %>"><%= generos[i].Nome %></option>

                <% } %>
              </select>

              <br>

              <div id="btnDiv">
                <button type="submit" id="btnCadFilme" class="btn btn-primary">Adicionar</button>
              </div>

            </form>

          </div>

        </div>

      </div>

    </div>

    <!-- Modal de Erro -->
    <% if(erro > 0) { %>

      <script>
          alert('Filme já cadastrado!')
      </script>

    <% } %>

    <footer class="border border-black">

      <div class="container border border-black">

      </div>

    </footer>

    <script src="js/script.js"></script>
    <script>
      adicionarMode();
    </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</body>
</html>