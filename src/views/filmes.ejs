<!DOCTYPE html>
<html lang="pt-br" id="html" data-bs-theme=white>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/filmes.css">
    <title>My Movie List</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/c147ae9e45.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

</head>
    <body>


    <nav class="navbar navbar-expand-lg bg-body-tertiary shadow">

      <div class="container-fluid d-flex justify-content-around">

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <% try { %>
          <% usuario[0].Usuario %>
          <div class="collapse navbar-collapse">
            <a class="navbar-brand" href="/<%= usuario[0].Usuario %>" id="tituloNav" >My Movie List</a>
          </div>
          <a class="navbar-brand" href="/perfil/<%= usuario[0].Usuario %>"><%= usuario[0].Usuario %></a>
          <a class="navbar-brand" href="/filmes/<%= usuario[0].Usuario %>">Filmes</a>
          <a class="navbar-brand" href="/series/<%= usuario[0].Usuario %>">Series</a>
          <span class="material-symbols-outlined" onclick="mudarDarkMode()" id="icone">
            dark_mode
          </span>
        <% } catch (error) { %>
          <a class="navbar-brand" href="/">ERRO</a>
        <% } %>

      </div>
      
    </nav>

    <main>
      
      <div class="container p-3 d-flex justify-content-center align-items-center mb-5 shadow-lg" id="containerPesquisa">

        
        <form action="/buscaFilmes/<%= usuario[0].Usuario %>" method="post" id="formPesquisa">
          <input class="form-control p-2" name="buscaFilme" id="buscaFilme" placeholder="Pesquise um filme">
        </form>
        
        <span class="material-symbols-outlined" id="imgLupa">
          search
        </span>

      </div>

      <div class="container p-3 d-flex justify-content-center mb-5" id="filmesBox">
        
        <div class="container row p-3 d-flex">

          <div class="d-flex justify-content-between">

            <h1>Filmes</h1>
            <% if(usuario[0].ISAdmin == 1) { %>
              <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addFilme">Adicionar Filme</button>
            <% } %>

          </div>

          <div class="container overflow-y-auto d-flex justify-content-between" id="filmes">
            <% for(let i = 0; i < filmes.length; i++) { %>

              <div class="filme p-2">

                <a href="/filmeSelec/<%= filmes[i].IDFilme %>/<%= usuario[0].Usuario %>">
                  <img  class="capaFilme" src="/img/<%= filmes[i].Imagem %>" alt="Imagem não encontrada">
                </a>

                <p class="text-center"><%= filmes[i].Titulo %></p>

              </div>

            <% } %>
          </div>

        </div>


      </div>

    </main>

    <!-- Modal -->

    <div class="modal" tabindex="-1" id="addFilme">
      
      <div class="modal-dialog modal-dialog-centered modal-lg">

        <div class="modal-content">

          <div class="modal-header">

            <h5 class="modal-title">Preencha os campos!</h5>

            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

          </div>

          <div class="modal-body">

            <form action="/filmes/<%= usuario[0].Usuario %>" enctype="multipart/form-data" method="post">

              <label class="form-label"  for="imagemInput">Imagem de capa do filme</label>

              <br>

              <input class="form-control" type="file" name="imagemInput" id="imagemInput" accept="image/" required>

              <br>

              <label class="form-label"  for="tituloInput">Titulo do Filme</label>

              <br>

              <input class="form-control" type="text"  name="tituloInput" name="tituloInput" placeholder="Digite o nome do filme" required>
  
              <br>

              <label class="form-label" for="sinopseInput" required>Sinopse do Filme</label>

              <br>

              <textarea class="form-control" name="sinopseInput" id="sinopseInput" rows="2"></textarea>

              <br>

              <label class="form-label" for="lancamentoInput">Data de Lançamento</label>

              <br>

              <input class="form-control" type="date" name="lancamentoInput" id="lancamentoInput">

              <br>

              <label class="form-label" for="idadeIndicativaInput">Idade Indicativa</label>

              <br>

              <select class="form-control" name="idadeIndicativaInput" id="idadeIndicativaInput">

                <option value="1">AL</option>
                <option value="2">A10</option>
                <option value="3">A12</option>
                <option value="4">A14</option>
                <option value="5">A16</option>
                <option value="6">A18</option>

              </select>

              <br>

              <label class="form-check-label" for="generos">Generos</label>
              <div class="overflow-y-auto" style="height: 200px;">
                <ul class="list-group" id="generos">
                  <% for(let i = 0; i < generos.length; i++) { %>
                    
                    <li class="list-group-item">
                      <input class="form-check-input me-1" type="checkbox" value="<%= generos[i].IDGenero %>" id="checkbox<%= i %>" name="inputGenero">
                      <label class="form-check-label" for="checkbox<%= i %>"><%= generos[i].Nome %></label>
                    </li>
  
                  <% } %>
                </ul>
              </select>

              <br>

              <div id="btnDiv">
                <button type="submit" id="btnCadFilme" class="btn btn-primary">Adicionar</button>
              </div>

            </form>

          </div>

        </div>

      </div>

    </div>

    <!-- Modal de filme já cadastrado -->

    <div class="modal" tabindex="-1" id="filmeJaCadastrado">
  
      <div class="modal-dialog modal-dialog-centered modal-sm">
        
        <div class="modal-content">

          <div class="d-flex justify-content-end p-2">

            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close"></button>

          </div>

          <div class="modal-body d-flex justify-content-center">

            <h5>Filme já cadastrado!</h5>

          </div>

        </div>

      </div>
      
    </div>

    <button class="d-none" id="abrirFilmeJaCadastrado" data-bs-toggle="modal" data-bs-target="#filmeJaCadastrado"></button>

    <% console.log(erro) %>

    <!-- Modal de Erro -->
    <% if(erro > 0) { %>

      <script>

        const modal = document.getElementById('filmeJaCadastrado')
        modal.style.backgroundColor = 'rgba(0, 0, 0, 0.8)'
        modal.style.display = 'block'
        
        const fecharModal = document.getElementById('close')

        fecharModal.addEventListener('click', () => {
          modal.style.display = 'none'
        })

      </script>

    <% } %>

    <script src="/js/script.js"></script>
    <script>
      adicionarMode();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

</body>
</html>